{
    "author": "minwook-shin",
    "manifest_version": 2,

    "name": "kookmin university home",
    "short_name": "kookmin.univ home",
    "description": "Unofficial extension of Kookmin University",
    "version": "1.32",
    "version_name": "1.32 stable",

    "browser_action": {
        "default_icon": "symbol_color.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "symbol_color.png"
    },

    "options_ui": {
        "chrome_style": true,
        "page": "options.html"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "http://*/*",
        "https://*/*",
        "contextMenus",
        "webRequest",
        "webRequestBlocking",
        "webNavigation",
        "storage",
        "unlimitedStorage",
        "notifications",
        "idle"
    ],
    "content_scripts": [{
        "matches": ["file://home.html"],
        "js": ["scripts.js"],
        "css": ["css.css"]
    }],
    "homepage_url": "https://github.com/minwook-shin/kookmin-university-home"
}